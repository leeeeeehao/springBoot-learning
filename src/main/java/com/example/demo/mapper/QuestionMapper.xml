<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace用于绑定Dao接口 -->
<mapper namespace="com.example.demo.mapper.QuestionMapper">

    <!--通用结果查询-->
    <resultMap id="BaseResultMap" type="com.example.demo.dto.QuestionDTO">
        <id column="id" property="id"/>
        <id column="question_title" property="title"/>
        <id column="question_description" property="description"/>
        <id column="gmt_create" property="gmtCreate"/>
        <id column="gmt_modified" property="gmtModified"/>
        <id column="question_creator" property="creator"/>
        <id column="comment_count" property="commentCount"/>
        <id column="view_count" property="viewCount"/>
        <id column="like_count" property="likeCount"/>
        <id column="question_tags" property="tags"/>
        <id column="avatar_url" property="avatarUrl"/>
    </resultMap>

    <select id="queryQuestions"  resultMap="BaseResultMap">
        select a.*,b.avatar_url from t_question as a, t_user as b where a.question_creator = b.account_id
    </select>

    <insert id="insertQuestion" parameterType="com.example.demo.model.User">
        insert into t_question(question_title,question_description,gmt_create,gmt_modified,question_creator,question_tags) values(#{title},#{description},#{gmtCreate},#{gmtModified},#{creator},#{tags})
    </insert>
</mapper>